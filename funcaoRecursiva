<meta charset="UTF-8">
<script>
function fatorialRecursivo(n) {
    if (n < 0) {
        return "Fatorial não é definido para números negativos.";
    }
    if (n === 0 || n === 1) {
        return 1;
    }
    return n * fatorialRecursivo(n - 1);
}

let numero = 5; 
console.log(`O fatorial de ${numero} é ${fatorialRecursivo(numero)}.`);


</script>
