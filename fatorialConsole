<meta charset="UTF-8">
<script>
function fatorial(n) {
    if (n < 0) {
        return "Fatorial não é definido para números negativos.";
    }
    let resultado = 1;
    for (let i = 1; i <= n; i++) {
        resultado *= i;
    }
    return resultado;
}

let numero = 5; 
console.log(`O fatorial de ${numero} é ${fatorial(numero)}.`);

</script>
